rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Users collection: one document per Firebase UID. Only the authenticated
    // user may create/read/update their own document. Deletions are disallowed
    // from the client.
    match /users/{uid} {
      allow read: if isOwner(uid);

      // Create only if the authenticated UID matches the document id and
      // the payload includes the same uid. Prevent clients from creating
      // a user document for another uid.
      allow create: if isOwner(uid)
                    && request.resource.data.uid == uid
                    // basic sanity: role must be 'user' (server may set other roles)
                    && (request.resource.data.role == 'user' || !('role' in request.resource.data));

      // Updates allowed only by owner.
      // - Allow merge updates where `uid` is not present, or if present it must
      //   match existing uid (prevents UID mutation).
      // - Prevent clients from writing sensitive password fields.
      // - Prevent client-side role changes.
      allow update: if isOwner(uid)
            && (!('uid' in request.resource.data) || request.resource.data.uid == resource.data.uid)
            && !('password' in request.resource.data)
            && !('passwordHash' in request.resource.data)
            && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role);

      // Never allow client deletes (prevent accidental or malicious removal)
      allow delete: if false;

      // Entries subcollection: only the owner may read/write their entries.
      match /entries/{entryId} {
        allow read: if isOwner(uid);
        allow create: if isOwner(uid)
                      && request.resource.data.user_id == uid
                      && request.resource.data.is_deleted == false;
        // Allow updates only if user_id is unchanged (or not present in merge updates)
        allow update: if isOwner(uid) && (!('user_id' in request.resource.data) || request.resource.data.user_id == resource.data.user_id);
        allow delete: if false;
      }
    }

    // Allow owners to request account deletion by creating a document in
    // `account_deletions/{uid}`. This document should be processed by a
    // trusted server-side function (admin SDK) which will perform the actual
    // deletion of user data. Clients are *not* allowed to directly delete
    // user docs or entries for security reasons.
    match /account_deletions/{uid} {
      allow create: if isOwner(uid) && request.resource.data.requestedBy == uid;
      allow read: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}

// Optional hardening (uncomment to enforce):
