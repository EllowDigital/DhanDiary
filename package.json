{
  "name": "dhandiary",
  "version": "2.5.0",
  "main": "index.ts",
  "private": true,
  "engines": {
    "node": ">=20.19.4"
  },
  "scripts": {
    "/* --- Lifecycle Scripts --- */": "",
    "postinstall": "node ./scripts/postinstall-fixes.js",
    "postprebuild": "node ./scripts/postprebuild-fixes.js",
    "check": "npm run format:check && npm run lint --silent && npm run typecheck",
    "/* --- Development Scripts --- */": "",
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "clean": "npx expo prebuild --clean",
    "/* --- Testing & Linting --- */": "",
    "test": "jest",
    "test:integration": "node ./scripts/integration/test_summaries.js",
    "lint": "eslint ./ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "depcheck:run": "depcheck",
    "typecheck": "tsc --noEmit",
    "/* --- Database Scripts --- */": "",
    "migrate": "node ./scripts/migrate.js",
    "neon:migrate": "node ./scripts/run-neon-migrations.js",
    "/* --- Build Scripts --- */": "",
    "prebuild": "npm run lint && npm test && npx tsc --noEmit",
    "build:apk-local": "npm ci && npx expo prebuild --platform android --no-install && cd android && gradlew.bat assembleRelease --parallel --daemon --build-cache -Dorg.gradle.jvmargs=-Xmx4g -Dorg.gradle.caching=true -Dorg.gradle.parallel=true"

  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.19.14",
