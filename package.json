    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.16",
    "prettier": "^3.7.1",
    "react-refresh": "^0.18.0",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "depcheck": {
    "ignore": [
      "@shopify/react-native-skia",
